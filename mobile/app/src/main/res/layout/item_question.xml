<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:layout_marginBottom="16dp">

    <!-- EditText pour la question -->
    <EditText
        android:id="@+id/question_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Entrez la question"
        android:textSize="16sp"
        android:layout_marginBottom="8dp"/>

    <!-- Spinner pour choisir le type de la question -->
    <Spinner
        android:id="@+id/question_type_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:theme="@style/Widget.AppCompat.Spinner.Underlined"/>

    <!-- Conteneur des options -->
    <LinearLayout
        android:id="@+id/options_container"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <!-- Button pour ajouter une option -->
    <Button
        android:id="@+id/add_option_btn"
        android:text="Ajouter une option"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"/>
</LinearLayout>
