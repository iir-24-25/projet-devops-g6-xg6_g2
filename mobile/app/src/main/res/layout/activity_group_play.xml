<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_group_play"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="@drawable/bg_gradient"
    android:orientation="vertical"
    android:gravity="center">

    <!-- Champ pour le pseudo -->
    <EditText
        android:id="@+id/et_pseudo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Entrez votre pseudo"
        android:inputType="textPersonName"
        android:padding="12dp"
        android:textColor="@android:color/black"
        android:layout_marginBottom="16dp" />

    <!-- Champ pour l'ID de la room -->
    <EditText
        android:id="@+id/et_room_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Entrez l'ID de la room"
        android:inputType="text"
        android:padding="12dp"
        android:textColor="@android:color/black"
        android:layout_marginBottom="24dp" />

    <!-- Bouton pour rejoindre la room -->
    <Button
        android:id="@+id/btn_join_room"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Rejoindre"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:background="@drawable/button_background"
        android:padding="12dp"
        android:layout_marginBottom="24dp" />

    <!-- Message d'attente -->
    <TextView
        android:id="@+id/tv_waiting_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="En attente du dÃ©marrage du quiz..."
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:visibility="gone"
        android:gravity="center"
        android:layout_marginTop="16dp" />

</LinearLayout>
